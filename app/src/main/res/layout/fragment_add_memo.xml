<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_gravity="center"
    android:layout_marginHorizontal="12dp"
    android:background="#E3F2FD"
    tools:context=".Memo.FragmentAddMemo">

    <TextView
    android:fontFamily="@font/comic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="Tambah Memo Kamu"
    android:textSize="20sp"
    android:textStyle="bold" />

    <TextView
        android:fontFamily="@font/comic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tanggal"
        android:textColor="@color/colorAccent1"
        android:textSize="20sp" />

    <EditText
        android:fontFamily="@font/comic"
        android:id="@+id/et_add_tanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tanggal"
        android:inputType="date|time"
        android:textSize="20sp" />

    <TextView
        android:fontFamily="@font/comic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Isi Memo"
        android:textColor="@color/colorAccent1"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_add_memo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Isi memo"
        android:fontFamily="@font/comic"
        android:inputType="text"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <TextView
            android:fontFamily="@font/comic"
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:text="Cancel" />

        <TextView
            android:fontFamily="@font/comic"
            android:id="@+id/tv_tambah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:text="Tambah" />
    </LinearLayout>
</LinearLayout>